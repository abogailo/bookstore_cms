<h1>Author#new</h1>
<p>Find me in app/views/author/new.html.erb</p>
<%= link_to("<< Back to List", authors_path, :class => 'back-link') %>

<div class="books new">
  <h2>Create author</h2>

  <%= form_for(@author) do |f| %>

    <table summary="author form fields">
      <tr>
        <th>Name</th>
        <td><%= f.text_field(:name) %></td>
      </tr>
      
</table>
    <div class="form-buttons">
      <%= f.submit("Create Author") %>
    </div>

  <% end %>
</div>