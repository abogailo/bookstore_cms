
<h1 style="color: white; margin: 35px 10px;">Sign Up!</h1>


  <div class="container" >
    <div class="row">
      <div class="col-sm-8">
        <div class="jumbotron" style="background: white; border-radius:10px; margin-top: 10px;">
          

          <h1>Sign Up!</h1>
          <form action="/signup" method="POST">
            <% if flash.has?(:message) %>
            <p style="color:#f0ad4e;"><%= flash[:message] %> </p>
            <% end %>
            <p><label for="username">Username:</label>
            <input type="text" autocomplete="off" name="username" placeholder="username..."></p>
            <p><label for="email">Email:</label>
            <input type="email" autocomplete="off" name="email" placeholder="email..."></p>
            <p><label for="password">Password:</label>
            <input type="password" autocomplete="off" name="password" placeholder="password..."></p>
            <button type="submit" class="btn btn-info">Submit</button>
          </form>

      </div><!--end jumbotron -->
    </div><!--end col-sm-8 -->
  </div><!-- end row -->
</div><!-- end container -->


<% unless current_user %>
    <%= link_to "Sign in with Github", user_github_omniauth_authorize_path %>
<% else %>
    <%= link_to "Logout", destroy_user_session_path, method: :delete %>
<% end %>