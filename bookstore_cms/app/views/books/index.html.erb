<div class= "books index">
    <h2> Boooks </h2>

<% @book_title = "All books" %>

<%= link_to("Add New Book", new_book_path, :class => 'action new') %>

<table class="listing" summary="Book list">
  <tr class="header">
    <th>Title</th>
    <th>ISBN</th>
    <th>Description</th>
    <th>Author</th>
    <th>Quantity</th>
    <th>Condition</th>
    <th>Price</th>
    <th>Year_published</th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.isbn %></td>
    <td><%= book.description%></td>
    <td><%= book.author_id %></td>
    <td><%= book.quantity %></td>
    td><%= book.condition %></td>
    td><%= book.price %></td>
    td><%= book.year_published%></td>
    <td class="center"><%= status_tag(book.visible) %></td>
    <td class="center"><%= book.sections.size %></td>
    <td class="actions">
      <%= link_to("Show", book_path(book), :class => 'action show') %>
      <%= link_to("Edit", edit_book_path(book), :class => 'action edit') %>
      <%= link_to("Delete", delete_book_path(book), :class => 'action delete') %>
    </td>
  </tr>
  <% end %>
</table>
</div>